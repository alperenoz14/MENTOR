<body>
    <!--  particles  -->
    <div id="particles-js"></div>
    <!-- //particles -->
    <div class="w3ls-pos">
        <h1>MENTORUM</h1>
        <div class="w3ls-login box">
            <!-- form starts here -->
            <form asp-controller="Login" asp-action="Login">
                <div class="agile-field-txt">
                    <input asp-for="email" type="email" name="email" placeholder="E-mail" required="" />
                </div>
                <div class="agile-field-txt">
                    <input asp-for="password" type="password" name="password" placeholder="******" required="" id="myInput" />
                    <div class="agile_label">
                        <input id="check3" name="check3" type="checkbox" value="sifreyi göster">
                        <label class="check" for="check3">Beni Hatırla</label>
                        <div class="agile2_label">
                            <label class="check" style="color: white"><a href="#">Sifremi Unuttum</a></label>
                        </div>
                    </div>
                </div>
                <div class="w3ls-bot">
                    <input type="submit" style="margin-top: -10px" value="GİRİS">
                </div>
            </form>
            <form style="margin-top: -100px" action="~/Signup/Signup">
                <input width="100" style="margin-top: 10px" type="submit" value="KAYIT OL !">
            </form>
        </div>

